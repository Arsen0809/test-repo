{
    "compilerOptions": {
    "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "baseUrl": "..",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "*": [
                "node_modules/*",
                "types/*"
            ]
        }
    }
}
